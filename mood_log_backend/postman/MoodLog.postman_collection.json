{
  "info": {
    "name": "MoodLog API",
    "_postman_id": "e4adf3f6-2f51-4a7d-9c4f-3b9c0c8fa123",
    "description": "Postman collection for MoodLog backend (Express + JWT). Set environment with baseUrl and token.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/signup",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};",
                  "try {",
                  "  json = pm.response.json();",
                  "} catch (e) {}",
                  "if (json && json.token) {",
                  "  pm.environment.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Moods",
      "item": [
        {
          "name": "List Moods",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/moods"
          }
        },
        {
          "name": "Create Mood",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/moods",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mood_type\": \"Happy\",\n  \"note\": \"Feeling great!\",\n  \"date\": \"{{today}}\"\n}"
            }
          }
        },
        {
          "name": "Get Mood by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/moods/1"
          }
        },
        {
          "name": "Update Mood",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/moods/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"note\": \"Updated note\"\n}"
            }
          }
        },
        {
          "name": "Delete Mood",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/moods/1"
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/analytics/summary"
          }
        },
        {
          "name": "Streak",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/analytics/streak"
          }
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "today",
      "value": "2025-01-01"
    }
  ]
}
